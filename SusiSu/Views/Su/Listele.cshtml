                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4"></div>
            <div class="col-md-6 col-lg-4">
                <div class="single-bottle-inner text-center">
                    <div class="bottle-image">
                        <img src="~/Content/assets/img/icons/big-bottle-of-water-with-handle.svg" alt="" class="svg">
                    </div>
                    <div class="single-bottle-text">
                        <h4>5 Litre Cam</h4>
                        <h4>
                            @foreach (var item5 in Model.Where(x => x.Boy == SusiSu.Enums.Enums.Boyut.Orta))
                            {
                                if (item5.Tur == SusiSu.Enums.Enums.Tur.Cam)
