@model IEnumerable<SusiSu.Models.ListeleViewModels>
@using SusiSu.Helper
@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<div class="container-fluid pt-140">
    <h2>Ürün Listesi</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirimFiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToplamStok)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Boy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirimFiyat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToplamStok)
                </td>
            </tr>
        }
    </table>
</div>
<section class="pt-120 pb-90 top-shape">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <!-- single bottle deliver wrap -->
                <div class="single-bottle-inner text-center">
                    <div class="bottle-image">
                        <img src="~/Content/assets/img/icons/water-gallon.svg" alt="" class="svg">
                    </div>
                    <div class="single-bottle-text">
                        <h4>10 Litre Cam</h4>
                        @*<h4>@SusiSu.Enums.Enums.Boyut.Büyük.GetEnumDisplayName()</h4>*@
                        <h4>
                            @foreach (var item2 in Model.Where(x => x.Boy == SusiSu.Enums.Enums.Boyut.Büyük))
                            {

                                if (item2.Tur == SusiSu.Enums.Enums.Tur.Cam)
                                {
                                    <h5>@SusiSu.Enums.Enums.Tur.Cam Stok</h5>
                                    @Html.DisplayFor(Model => item2.ToplamStok)
                                }
                                if (item2.Tur == SusiSu.Enums.Enums.Tur.Plastik)
                                {
                                    <h5>@SusiSu.Enums.Enums.Tur.Plastik Stok</h5>
                                    @Html.DisplayFor(Model => item2.ToplamStok)
                                }
                            }
                        </h4>
                        <p>Suşi Su</p>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#siparis">
                            Sipariş Ver
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="single-bottle-inner text-center">
                    <div class="bottle-image">
                        <img src="~/Content/assets/img/icons/big-bottle-of-water.svg" alt="" class="svg">
                    </div>
                    <div class="single-bottle-text">
                        <h4>20 Litre Cam</h4>
                        @*<h4>@SusiSu.Enums.Enums.Boyut.Damacana.GetEnumDisplayName()</h4>*@
                        <h4>
                            @foreach (var item3 in Model.Where(x => x.Boy == SusiSu.Enums.Enums.Boyut.Damacana))
                            {
                                if (item3.Tur == SusiSu.Enums.Enums.Tur.Cam)
                                {
                                    <h5>@SusiSu.Enums.Enums.Tur.Cam Stok</h5>
                                    @Html.DisplayFor(Model => item3.ToplamStok)
                                }
                                if (item3.Tur == SusiSu.Enums.Enums.Tur.Plastik)
                                {
                                    <h5>@SusiSu.Enums.Enums.Tur.Plastik Stok</h5>
                                    @Html.DisplayFor(Model => item3.ToplamStok)
                                }
                            }
                        </h4>
                        <p>Suşi Su</p>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#siparis">
                            Sipariş Ver
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <!-- single bottle deliver wrap -->
                <div class="single-bottle-inner text-center">
                    <div class="bottle-image">
                        <img src="~/Content/assets/img/icons/water-bottle.svg" alt="" class="svg">
                    </div>
                    <div class="single-bottle-text">
                        <h4>1 Litre Cam</h4>
                        <h4>
                            @foreach (var item4 in Model.Where(x => x.Boy == SusiSu.Enums.Enums.Boyut.Küçük))
                            {
                                if (item4.Tur == SusiSu.Enums.Enums.Tur.Cam)
                                {
                                    <h5>@SusiSu.Enums.Enums.Tur.Cam Stok</h5>
                                    @Html.DisplayFor(Model => item4.ToplamStok)
                                }
                                if (item4.Tur == SusiSu.Enums.Enums.Tur.Plastik)
