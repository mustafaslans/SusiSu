                                    <h5>@SusiSu.Enums.Enums.Tur.Cam Stok</h5>
                                    @Html.DisplayFor(Model => item2.ToplamStok)
                                }
                                if (item2.Tur == SusiSu.Enums.Enums.Tur.Plastik)
                                {
                                    <h5>@SusiSu.Enums.Enums.Tur.Plastik Stok</h5>
